<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ramiro.ernesto.nicestart">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!--    enabling webview for DialogFlow-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--        tools:replace="android:appComponentFactory"-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tent_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tent_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"


        >
        <activity
            android:name=".Main3Activity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="locked"/>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AnyChartActivity" />
        <activity android:name=".Motion" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">

        </activity>

        <activity android:name=".SignupActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:parentActivityName=".Motion" />
        <activity android:name=".MyWebView" />
    </application>

</manifest>